<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PresenceActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="139dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Attendance Certificate"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="For the Attention of the Human Resources "
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Subject: Request for attendance   certificate :"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="352dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="142dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginRight="17dp"
                    android:layout_toStartOf="@+id/poste1"
                    android:layout_toLeftOf="@+id/poste1"

                    android:text=" Post :"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/poste1"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/raison1"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/poste1"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="147dp"
                    android:layout_height="39dp"
                    android:layout_below="@+id/textView7"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="19dp"
                    android:layout_marginRight="19dp"
                    android:layout_toStartOf="@+id/raison1"
                    android:layout_toLeftOf="@+id/raison1"
                    android:text=" Reason :"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="158dp"
                    android:layout_height="46dp"
                    android:layout_below="@+id/textView11"
                    android:layout_marginTop="25dp"
                    android:text=" Phone Number :"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="163dp"
                    android:layout_height="41dp"
                    android:layout_below="@+id/textView12"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="41dp"
                    android:layout_marginRight="41dp"
                    android:layout_toStartOf="@+id/spinner1"
                    android:layout_toLeftOf="@+id/spinner1"
                    android:text=" Langue :"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="204dp"
                    android:layout_height="46dp"
                    android:layout_below="@+id/phone1"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="38dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginRight="1dp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="203dp"
                    android:layout_height="61dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="104dp"
                    android:layout_marginLeft="104dp"
                    android:layout_marginEnd="104dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginBottom="27dp"
                    android:text="Send" />

                <EditText
                    android:id="@+id/phone1"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/raison1"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="-2dp"
                    android:layout_marginRight="-2dp"
                    android:ems="10"
                    android:inputType="phone" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>