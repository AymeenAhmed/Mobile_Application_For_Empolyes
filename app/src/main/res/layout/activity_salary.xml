<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SalaryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textsalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Salary Certificate"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textsalary2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="For the Attention of the Human Resources "
                android:textSize="20sp"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/textsalary3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Subject: Request for salary certificate :"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="428dp"
                android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/textpost"
                    android:layout_width="156dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="10dp"

                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_toStartOf="@+id/posteSalary"
                    android:layout_toLeftOf="@+id/posteSalary"
                    android:text=" Post :"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/posteSalary"
                    android:layout_width="241dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="144dp"
                    android:layout_height="37dp"
                    android:layout_below="@+id/textpost"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_toStartOf="@+id/raison1"
                    android:layout_toLeftOf="@+id/raison1"
                    android:text=" Reason :"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/raison1"
                    android:layout_width="239dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/posteSalary"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="201dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView11"
                    android:layout_marginTop="34dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_toStartOf="@+id/phone1"
                    android:layout_toLeftOf="@+id/phone1"
                    android:text=" Phone Number :"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/phone1"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/raison1"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="-1dp"
                    android:layout_marginRight="-1dp"
                    android:ems="10"
                    android:inputType="phone" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="203dp"
                    android:layout_height="61dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="105dp"
                    android:layout_marginLeft="105dp"
                    android:layout_marginEnd="103dp"
                    android:layout_marginRight="103dp"
                    android:layout_marginBottom="82dp"
                    android:text="Send" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="195dp"
                    android:layout_height="63dp"
                    android:layout_below="@+id/textView12"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="-1dp"
                    android:layout_marginLeft="-1dp"
                    android:layout_marginTop="34dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_toStartOf="@+id/editTextDate2"
                    android:layout_toLeftOf="@+id/editTextDate2"
                    android:text=" Desired date :"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextDate2"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView12"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toStartOf="@+id/textView9"
                    android:layout_toLeftOf="@+id/textView9"
                    android:ems="10"
                    android:inputType="date" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="66dp"
                    android:layout_height="39dp"
                    android:layout_below="@+id/phone1"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="26dp"
                    android:layout_marginEnd="69dp"
                    android:layout_marginRight="69dp"
                    android:text="    To :"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextDate3"
                    android:layout_width="64dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/phone1"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="194dp"
                    android:ems="10"
                    android:inputType="date" />

            </RelativeLayout>
        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>